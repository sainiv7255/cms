<script>
  function sendotp()
  {
    var email = $('.email').val();
    if(email == '')
    {
      $('#show_error').html('Please enter your email');
    }
    else
    {

      $.ajax({
        type:"POST",
        url:"<?= $this->Url->build(['contorller'=>'users','action'=>'forgotPassword'])?>",
        data:{'email':email},
        beforeSend:function(xhr){
        xhr.setRequestHeader('X-CSRF-Token', $('[name="_csrfToken"]').val());
        },
        success:function(data)
        {
          if(data =='1')
          {
           $("#otp_div").show(300);
             $("#email_form").hide(300);
            
          }
          else
          {
            $('#show_error').html('We do not have an account associated with this email');
          }
        }
      });
    }
  }
  function checkotp()
  {
    var email = $('.email').val();
    var otp = $('.otp').val();
    if(otp == '')
    {
      $('#show_error1').html('Please enter code');
    }
    else
    {

      $.ajax({
        type:"POST",
        url:"<?= $this->Url->build(['contorller'=>'users','action'=>'validateOtp'])?>",
        data:{'otp':otp,
              'email':email},
        beforeSend:function(xhr){
        xhr.setRequestHeader('X-CSRF-Token', $('[name="_csrfToken"]').val());
        },
        success:function(data)
        {
          if(data =='1')
          {
          $("#resetpassform").show(300);
          $("#otp_div").hide(300);
          }
          else
          {
            $('#show_error1').html('Please enter a valid code');
          }
        }
      });
    }
  }
  function updatepassword()
  {
    var email = $('.email').val();
    var password = $('.password').val();
    var confirm_password = $('.confirm_password').val();
    if(password == '')
    {
      $('#check_password').html('Please enter password');
    }
   
     else if(confirm_password == '')
    {
      $('#check_confirm_password').html('Please enter confirm password');
    }
    
     else if(confirm_password != password)
    {
      $('#check_confirm_password').html('Password mismatch');
    }
   
    else
    {

      $.ajax({
        type:"POST",
        url:"<?= $this->Url->build(['contorller'=>'users','action'=>'resetpw'])?>",
        data:{'email':email,
              'confirm_password':confirm_password},
        beforeSend:function(xhr){
        xhr.setRequestHeader('X-CSRF-Token', $('[name="_csrfToken"]').val());
        },
        success:function(data)
        {
          if(data =='1')
          {
           $("#resetpassform").hide(400);
            $('#resetpasswordsuccess').html('Your Password Reset Successfully');
          }
          else
          {
            $('#resetpasswordsuccess1').html('Your Password Dose Not Reset Successfully');
        
          }
        }
      });
    }
  }
</script>



